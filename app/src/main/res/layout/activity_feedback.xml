<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FeedbackActivity">

    <RelativeLayout
        android:id="@+id/feedback_heading_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/color_header">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/left_arrow"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/bacfeedback"
            />

<!--        <ImageView-->
<!--            android:layout_width="200dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_centerInParent="true"-->
<!--            android:layout_margin="10dp"-->
<!--            android:src="@drawable/home_logo"-->
<!--            />-->

        <ImageView
            android:id="@+id/main_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:src="@drawable/seafood_home_icon">

        </ImageView>

        <ImageView
            android:id="@+id/closefeedback"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/cross_icon" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:layout_below="@+id/feedback_heading_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detail_feedback_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Your Details"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:layout_marginTop="5dp"
            android:background="#B3B3B3"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="7dp"></View>



    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="20dp"
       android:visibility="gone"
       android:layout_below="@+id/details_layout"
       android:orientation="vertical">

       <androidx.cardview.widget.CardView
           android:id="@+id/cddelegatecompany"
           android:layout_width="match_parent"
           android:layout_height="55sp"
           android:paddingBottom="20sp"
           >
           <EditText
               android:id="@+id/feedback_name_edit"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:padding="2dp"
               android:drawableTint="@android:color/darker_gray"
               android:layout_marginLeft="10dp"
               android:background="@android:color/white"
               android:layout_marginRight="10dp"
               android:hint="Name"
               android:singleLine="true"
               android:textColor="@android:color/black"
               android:textColorHint="@android:color/black" />
       </androidx.cardview.widget.CardView>


       <androidx.cardview.widget.CardView
           android:id="@+id/cdfascianame"
           android:layout_width="match_parent"
           android:layout_height="55sp"
           android:layout_marginTop="10dp"
           android:paddingBottom="20sp"
           >


           <EditText
               android:id="@+id/feedback_desig_edit"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:padding="2dp"
               android:drawableTint="@android:color/darker_gray"
               android:layout_marginLeft="10dp"
               android:background="@android:color/white"
               android:layout_marginRight="10dp"
               android:hint="Designation"
               android:singleLine="true"
               android:inputType="textEmailAddress"
               android:textColor="@android:color/black"
               android:textColorHint="@android:color/black" />


       </androidx.cardview.widget.CardView>





       <androidx.cardview.widget.CardView
           android:id="@+id/cdaddress"
           android:layout_width="match_parent"
           android:layout_height="55sp"
           android:layout_marginTop="10dp"
           android:paddingBottom="20sp"
           >
           <EditText
               android:id="@+id/feedback_email_edit"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:padding="2dp"
               android:drawableTint="@android:color/darker_gray"
               android:layout_marginLeft="10dp"
               android:background="@android:color/white"
               android:layout_marginRight="10dp"
               android:singleLine="true"
               android:hint="Email"
               android:inputType="textEmailAddress"
               android:textColor="@android:color/black"
               android:textColorHint="@android:color/black" />
       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="55sp"
           android:layout_marginTop="10dp"
           android:paddingBottom="20sp"
           >
           <EditText
               android:id="@+id/feedback_edit_mobile"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:padding="2dp"
               android:drawableTint="@android:color/darker_gray"
               android:layout_marginLeft="10dp"
               android:background="@android:color/white"
               android:layout_marginRight="10dp"
               android:singleLine="true"
               android:hint="Mobile"
               android:inputType="number"
               android:maxLength="10"
               android:textColor="@android:color/black"
               android:textColorHint="@android:color/black" />
       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="130dp"
           android:layout_marginTop="10dp"
           android:paddingBottom="20sp"
           >
           <EditText
               android:id="@+id/feedback_edit"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:padding="2dp"
               android:drawableTint="@android:color/darker_gray"
               android:layout_marginLeft="10dp"
               android:background="@android:color/white"
               android:layout_marginRight="10dp"
               android:hint="Feedback"
               android:gravity="top|left"
               android:textColor="@android:color/black"
               android:textColorHint="@android:color/black" />
       </androidx.cardview.widget.CardView>




       <androidx.appcompat.widget.AppCompatButton
           android:id="@+id/feedback_button"
           android:layout_width="match_parent"
           android:layout_marginTop="20sp"
           android:layout_height="wrap_content"
           android:text="@string/submit_text"
           android:textAllCaps="false"
           android:textColor="#FFF"
           android:background="@android:color/holo_green_light"
           />

   </LinearLayout>


    <TextView
        android:id="@+id/tvcomingsoon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coming Soon"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="26sp"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        />


    <WebView
        android:id="@+id/webview"
        android:layout_below="@+id/feedback_heading_layout"
        android:layout_alignParentLeft="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <ProgressBar
        android:id="@+id/feedback_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"></ProgressBar>


</RelativeLayout>