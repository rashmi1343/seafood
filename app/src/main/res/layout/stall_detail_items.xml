<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="7dp">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="10dp"
       android:weightSum="5"
       android:orientation="horizontal"
       android:background="@drawable/background_border">
       <TextView
           android:id="@+id/dlegate_name_txt"
           android:layout_width="20dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:textSize="12sp"
           android:textStyle="bold"
           android:text="Delegate Name"
           android:textColor="@android:color/black"></TextView>

       <TextView
           android:id="@+id/designation_name_txt"
           android:layout_width="15dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:textSize="12sp"
           android:textStyle="bold"
           android:text="Designation"
           android:textColor="@android:color/black"></TextView>

       <TextView
           android:id="@+id/mobile_txt"
           android:layout_width="25dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:layout_marginLeft="5dp"
           android:textSize="12sp"
           android:textStyle="bold"
           android:text="1234567890"
           android:textColor="@android:color/black"></TextView>


       <TextView
           android:id="@+id/stallname_txt"
           android:layout_width="10dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:layout_marginLeft="12dp"
           android:textSize="12sp"
           android:textStyle="bold"
           android:text=""
           android:textColor="@android:color/black"></TextView>

       <ImageView
           android:id="@+id/delete_delegate"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_marginLeft="5dp"
           android:layout_weight="1"
           android:src="@drawable/ic_delete_black_24dp"></ImageView>
   </LinearLayout>

</RelativeLayout>