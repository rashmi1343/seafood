<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AboutShowActivity">

    <RelativeLayout
        android:id="@+id/rlmainlayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >


    <RelativeLayout
        android:id="@+id/rlheaderbarshow"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/color_header">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/left_arrow"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/backicon"
            />

<!--        <ImageView-->
<!--            android:layout_width="200dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_centerInParent="true"-->
<!--            android:layout_marginStart="10dp"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:layout_marginEnd="10dp"-->
<!--            android:layout_marginBottom="10dp"-->
<!--            android:src="@drawable/home_logo" />-->


        <ImageView
            android:id="@+id/imglogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:src="@drawable/seafood_home_icon" />


        <ImageView
            android:id="@+id/closeicon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/cross_icon" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlshow"
        android:layout_below="@+id/rlheaderbarshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/text_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40sp"
            android:text="@string/abtiss2023"
            android:textColor="@android:color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_about"
            android:lineSpacingExtra="3dp"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="10sp"
            android:text="@string/abtiss"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16sp" />


    </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>