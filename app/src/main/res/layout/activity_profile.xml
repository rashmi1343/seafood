<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ProfileActivity">

    <RelativeLayout
        android:id="@+id/subroot_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/color_header">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/left_arrow"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/backicon_profile"
            android:visibility="gone"
            />

<!--        <ImageView-->
<!--            android:layout_width="200dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_centerInParent="true"-->
<!--            android:layout_marginStart="10dp"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:layout_marginEnd="10dp"-->
<!--            android:layout_marginBottom="10dp"-->
<!--            android:src="@drawable/home_logo" />-->



        <ImageView
            android:id="@+id/main_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:src="@drawable/seafood_home_icon">

        </ImageView>


        <ImageView
            android:id="@+id/closeicon_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:src="@mipmap/cross_icon" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        android:weightSum="2">

        <ImageView
            android:id="@+id/user_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/user_icon"
            android:layout_centerVertical="true"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/user_img"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/display_user_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Display User"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="20sp"></TextView>

            <TextView
                android:id="@+id/username_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@android:color/black"
                android:textSize="18sp"></TextView>

        </LinearLayout>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cdleads"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tvimgleads"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textSize="28dp"

                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"></ImageView>

            <TextView
                android:id="@+id/desig_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/strlead"
                android:textSize="18sp"
                android:textColor="@color/color_silver"
                android:layout_marginLeft="35dp"></TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cdseminar"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tvimgseminar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/seminar"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"></ImageView>

            <TextView
                android:id="@+id/tvseminarval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/strseminar"
                android:textSize="18sp"
                android:textColor="@color/color_silver"
                android:layout_marginLeft="35dp"></TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/cdfeedback"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tvimgfeedback"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/feedbackblack"
                android:layout_gravity="center_vertical"></ImageView>

            <TextView
                android:id="@+id/tvfeedbackval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/strfeedback"
                android:textSize="18sp"
                android:textColor="@color/color_silver"
                android:layout_marginLeft="35dp"></TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>




    <androidx.cardview.widget.CardView
        android:id="@+id/logout_card"
        android:layout_width="match_parent"
        android:layout_marginTop="7dp"
        android:layout_height="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/logout"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"></ImageView>

            <TextView
                android:id="@+id/logout_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Log Out"
                android:textSize="18sp"
                android:textColor="@color/color_silver"
                android:layout_marginLeft="35dp"></TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>